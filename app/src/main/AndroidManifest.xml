<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoshiki.pazlog">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="pazlog.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Monster"
            android:label="@string/title_activity_monster"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Gacha"
            android:label="@string/title_activity_gacha"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dungeon"
            android:label="@string/title_activity_dungeon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dungeon_history"
            android:label="@string/title_activity_dungeon_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Gacha_save"
            android:label="@string/title_activity_gacha_save"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
